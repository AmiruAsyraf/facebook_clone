<div class="container">
  <h1>Profile Page</h1>
  <h2><%= @user.name %> </h2>

  <h1>Posts:</h1>
  <% @user.posts.each do |c| %>
    <p><%=  c.title %></p>
    <p><%=  c.body %></p>
    <br>
    <% end %>

  <h1>Comments:</h1>
    <% @user.comments.each do |c| %>
    <p><%=  c.content %></p>
    <br>
    <% end %>

</div>
